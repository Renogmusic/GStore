@model GStore.Models.StoreBinding

@using (Html.BeginForm())
{
	@Html.AntiForgeryToken()

	<div class="row">
		<h2 class="jumbotron SysAdminEditPageTitle col-md-offset-2 col-md-10 text-warning title-align">Edit Store Binding Id [@(Model.StoreBindingId)]</h2>
	</div>

	<div class="row">
		<div class="form-actions col-md-offset-2 col-md-10">
			<input type="submit" value="Save" class="btn btn-warning" />
			&nbsp;&nbsp;&nbsp;|&nbsp;&nbsp;&nbsp;&nbsp;
			@Html.ActionLink("Cancel", "Details", new { id = Model.StoreBindingId }, new { @class = "btn btn-default" })
		</div>
	</div>

	<div class="row">
		<div class="form-validation col-md-offset-2 col-md-10">
			@Html.ValidationSummary(false, "", new { @class = "text-danger" })
			@Html.HiddenFor(model => model.StoreBindingId)
			@Html.HiddenAuditFields()
		</div>
	</div>

	<div class="form-horizontal">
		@Html.EditorFor(model => model.Client)
		@Html.EditorFor(model => model.StoreFront)
		@Html.EditorFor(model => model.HostName)
		@Html.EditorFor(model => model.Port)
		@Html.EditorFor(model => model.RootPath)
		@Html.EditorFor(model => model.UseUrlStoreName)
		@Html.EditorFor(model => model.UrlStoreName)
		@Html.EditorFor(model => model.Order)
		@Html.EditorFor(model => model.StartDateTimeUtc)
		@Html.EditorFor(model => model.EndDateTimeUtc)
		@Html.EditorFor(model => model.IsPending)

	</div>

	<div class="row">
		<div class="form-actions col-md-offset-2 col-md-10">
			<input type="submit" value="Save" class="btn btn-warning" />
			&nbsp;&nbsp;&nbsp;|&nbsp;&nbsp;&nbsp;&nbsp;
			@Html.ActionLink("Cancel", "Details", new { id = Model.StoreBindingId }, new { @class = "btn btn-default" })
		</div>
	</div>
}
<hr />
<div>
	@Html.ActionLink("Back to List", "Index")
</div>
