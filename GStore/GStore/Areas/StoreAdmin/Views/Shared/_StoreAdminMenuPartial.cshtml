@model GStore.Areas.StoreAdmin.ViewModels.StoreAdminViewModel
@using GStore.AppHtmlHelpers;
@using GStore.Models;
@using GStore.Data;
<!-- Store Admin Menu -->
<div id="navbar" class="navbar navbar-inverse navbar-fixed-top">
	<div class="container">
		<div class="navbar-header">
			<a id="navbarbrandlink" href="@(Url.Action("Index", "StoreAdmin"))" class="navbar-brand">
				<img id="NavBarTinyLogo" class="NavBarTinyLogo"
					 src="~/Images/Logo/NavBarTinyLogo.png"
					 alt="@(Html.AttributeEncode(Model.StoreFront.Name))"
					 title="@(Html.AttributeEncode(Model.StoreFront.Name))" />
				@(Html.Encode(Model.StoreFront.Name)) - Admin
			</a>
			<button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
				<span class="icon-bar"></span>
				<span class="icon-bar"></span>
				<span class="icon-bar"></span>
				<span class="icon-bar"></span>
			</button>
		</div>
		<div class="navbar-collapse collapse">
			@Html.Partial("_StoreAdminMenuItemsPartial", Model)
			@Html.Partial("_StoreAdminLoginPartial")
		</div>
	</div>
</div>
