@model GStore.Exceptions.GStoreErrorInfo
@using GStore.AppHtmlHelpers
@using GStore.Models
@{
	string title = "Unknown Store";
	ViewBag.Title = title;
	StoreFront storeFront = Html.CurrentStoreFront(false);
}

<h1 class="text-danger">@title</h1>
<h1>
	Sorry, this store at @Html.ViewContext.RequestContext.HttpContext.Request.Url.Host is not set up yet.
</h1>
<h2>
	Please try again later, or contact the web site owner.
</h2>
<h3>
	If this is your web site and you wish to activate this site, contact us at<br />
	<a href="http://www.gstore.renog.info/contact">http://www.gstore.renog.info/contact</a>
</h3>
<p><small>@DateTime.Now.ToLocalTime()</small></p>
@if (Request.IsLocal || User.IsInRole("SystemAdmin"))
{
	@Html.Partial("_ErrorDetailsPartial", Model)
}
