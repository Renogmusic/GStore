@model GStore.Models.ViewModels.MenuViewModel
@using GStore.AppHtmlHelpers;
@using GStore.Models;
@using GStore.Data;
@{
	string storeFrontName = "GStore";
	if (Model.StoreFront != null)
	{
		storeFrontName = Model.StoreFront.Name;
	}
}

<!-- NavBar -->
<div id="navbar" class="navbar navbar-inverse navbar-fixed-top">
	<div class="container">
		<div class="navbar-header">
			<a id="navbarbrandlink" href="~/" class="navbar-brand">
				<img id="NavBarTinyLogo" class="NavBarTinyLogo"
					 src="~/Images/Logo/NavBarTinyLogo.png" alt="@(Html.AttributeEncode(storeFrontName))" title="@(Html.AttributeEncode(storeFrontName))" />
				@(Html.Encode(storeFrontName))
			</a>
			<button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
				<span class="icon-bar"></span>
				<span class="icon-bar"></span>
				<span class="icon-bar"></span>
				<span class="icon-bar"></span>
			</button>
		</div>
		<div class="navbar-collapse collapse">
			<ul class="nav navbar-nav">
				@Html.Partial("_NavBarCatalogPartial", Model)
				@Html.Partial("_NavBarMenuPartial", Model)
				<li>@(Html.ActionLink("About GStore", "About", "GStore"))</li>
			</ul>
			@Html.Partial("_LoginPartial")
		</div>
	</div>
</div>

