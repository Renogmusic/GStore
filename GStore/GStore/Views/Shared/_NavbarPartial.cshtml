@model GStore.Models.ViewModels.MenuViewModel
@using GStore.AppHtmlHelpers;
@using GStore.Models;
@using GStore.Models.Extensions;
@{
	string storeFrontName = "GStore";
	if (Model.StoreFront != null)
	{
		storeFrontName = Model.StoreFront.Name;
	}
}

<!-- NavBar -->
<div class="navbar navbar-inverse navbar-fixed-top">
	<div class="container">
		<div class="navbar-header">
			<a href="~/" class="navbar-brand">
				@(Html.Encode(storeFrontName))&nbsp;
				<img id="TinyLogo" class="TinyLogo"
					 src="~/Images/Logo/menu.png"
					 alt="@(Html.AttributeEncode(storeFrontName))"
					 title="@(Html.AttributeEncode(storeFrontName))" />
			</a>
			<button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
				<span class="icon-bar"></span>
				<span class="icon-bar"></span>
				<span class="icon-bar"></span>
				<span class="icon-bar"></span>
			</button>
		</div>
		<div class="navbar-collapse collapse">
			<ul class="nav navbar-nav">
				@Html.Partial("_NavBarCatalogPartial", Model)
				@Html.Partial("_NavBarMenuPartial", Model)
			</ul>
			@Html.Partial("_LoginPartial")
		</div>
	</div>
</div>

