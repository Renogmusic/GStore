@model GStore.Models.ViewModels.PageViewModel
@using GStore.AppHtmlHelpers
@using GStore.Models;
@using GStore.Data;
@if (Model.EditMode)
{
	@Html.Partial("_EditModeTopPartial", Model)
}
else if (Model.ShowEditPageLink)
{
	@Html.Partial("_EditLinkTopPartial", Model)
}
	<h1 class="text-danger">Welcome to GStore!</h1>
	<h2>@Html.CurrentStoreFront(true).Name</h2>
<h3>Log in and customize your site with our GStore builder tools.</h3>
<a href="http://www.gstore.renog.info/Contact">Click here to contact us about GStore</a>
@Html.DisplayPageSection("Jumbotron", 1)

@if (Model.EditMode)
{
	@Html.Partial("_EditModeBottomPartial", Model)
}
else if (Model.ShowEditPageLink)
{
	@Html.Partial("_EditLinkBottomPartial", Model)
}
