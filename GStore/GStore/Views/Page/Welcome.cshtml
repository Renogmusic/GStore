@model GStore.Models.ViewModels.PageViewModel
@using GStore.AppHtmlHelpers
@using GStore.Models;
@using GStore.Data;
@if (Model.EditMode)
{
	@Html.Partial("_EditModeTopPartial", Model)
}
else if (Model.ShowEditPageLink)
{
	@Html.Partial("_EditLinkTopPartial", Model)
}
<div id="PageContent">
	@Html.DisplayPageSection("Headline1", 1, "Headline 1", "<h1>::page.title::</h1>", false, false)
	@Html.DisplayPageSection("Headline2", 2, "Headline 2", "<h2 class=\"text-danger\">Welcome to ::storefront.name::!</h2>", false, false)
	@Html.DisplayPageSection("Headline3", 3, "Headline 3", "<h3>Log in and customize your site with our GStore builder tools.</h3>", false, false)
	@Html.DisplayPageSection("BodyText", 4, "Body Text", string.Empty, false, false)
	@Html.DisplayPageSection("BodyLink", 5, "Body Link", "<a href=\"http://www.gstore.renog.info/Contact\">Click here to contact us about GStore</a>", false, false)
</div>
<div id="PageForm" class="PageForm">
	@Html.DisplayPageForm()
</div>

@if (Model.EditMode)
{
	@Html.Partial("_EditModeBottomPartial", Model)
}
else if (Model.ShowEditPageLink)
{
	@Html.Partial("_EditLinkBottomPartial", Model)
}
