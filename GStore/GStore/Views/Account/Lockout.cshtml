@{
	ViewBag.Title = "Locked Out";
	bool checkingOut = (ViewBag.CheckingOut as bool?) ?? false;
	object routeValues = null;
	if (checkingOut)
	{
		routeValues = new { CheckingOut = checkingOut };
	}
}

<hgroup>
	<h1 class="text-danger">Sorry, this account is temporarily locked out.</h1>
</hgroup>

<p class="text-danger">
	For security reasons, this account has been locked out for 5 minutes.<br />
	Please try again later, or
	@Html.ActionLink("Click here to reset your password", "ForgotPassword", "Account", routeValues, null)
</p>

@if (checkingOut)
{
	<div class="row">
		<div class="form-group col-xs-12">
			@Html.ActionLink("Return to Checkout as a Guest", "LoginOrGuest", "Checkout", new { ContinueAsGuest = true }, new { @class = "btn btn-info" })
		</div>
	</div>
}
