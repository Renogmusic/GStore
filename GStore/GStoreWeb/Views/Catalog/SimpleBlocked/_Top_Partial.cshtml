@model CatalogViewModel
<!-- Top Catalog Start -->
@{
	bool hasChildCategories = false;
	
	//root display
	hasChildCategories = Model.CategoryTree.Count != 0;
	ViewBag.Title = Model.StoreFrontConfig.CatalogTitle;
	UserProfile profile = Html.CurrentUserProfile(false);
}	

