@model BlogAdminViewModel

<!-- Blog Admin Menu -->
<div id="navbar" class="navbar navbar-inverse navbar-fixed-top">
	<div class="container">
		<div class="navbar-header">
			<a id="navbarbrandlink" href="@(Url.Action("Index", "BlogAdmin"))" class="navbar-brand" accesskey="h">
				<img id="NavBarTinyLogo" class="NavBarTinyLogo"
					 src="~/Images/Logo/NavBarTinyLogo.png"
					 alt="@(Html.AttributeEncode(Model.StoreFrontConfig.Name))"
					 title="@(Html.AttributeEncode(Model.StoreFrontConfig.Name))" />
				@(Html.Encode(Model.StoreFrontConfig.Name)) - Blog Admin
			</a>
			<button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
				<span class="icon-bar"></span>
				<span class="icon-bar"></span>
				<span class="icon-bar"></span>
				<span class="icon-bar"></span>
			</button>
		</div>
		<div class="navbar-collapse collapse">
			@{ Html.RenderPartial("_BlogAdminMenuItemsPartial", Model); }
			@{ Html.RenderPartial("_BlogAdminLoginPartial"); }
		</div>
	</div>
</div>
