@model PageEditViewModel

<script src="~/Scripts/CKEditor/ckeditor.js"></script>
<div class="row">
	<h1 class="jumbotron StoreAdminCreatePageTitle col-md-offset-1 col-md-8">
		<span class="text-info">Create a New Page</span>
	</h1>
</div>

@using (Html.BeginForm())
{
	<div class="row">
		<div class="form-actions no-color col-md-offset-3 col-md-6">
			<input type="submit" value="Create Page" class="btn btn-info" />
			&nbsp;&nbsp;|&nbsp;&nbsp;
			@Html.ActionLink("OK / Cancel", "Manager", null, new { @class = "btn btn-default" })
		</div>
	</div>
	
	Html.RenderPartial("_PageEditPartial", Model);

	<div class="row">
		<div class="form-actions no-color col-md-offset-3 col-md-6">
			<input type="submit" value="Create Page" class="btn btn-info" />
			&nbsp;&nbsp;|&nbsp;&nbsp;
			@Html.ActionLink("OK / Cancel", "Manager", null, new { @class = "btn btn-default" })
		</div>
	</div>

}

