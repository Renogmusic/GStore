						{
							@:&nbsp;&nbsp;|&nbsp;&nbsp;
							@Html.ActionLink("Edit", "Edit", new { id = Model.WebFormId, Tab = "Fields", webFormFieldId = Model.WebFormFieldId }, new { @class = "btn btn-warning" })
						}
					</div>
				</div>
				<div class="form-group">
