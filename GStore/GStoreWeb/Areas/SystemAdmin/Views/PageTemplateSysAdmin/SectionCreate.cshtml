@model PageTemplateSection

@{ ViewData.SetColDisplay(0, 2, 8); }
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

	<div class="row">
		<h2 class="jumbotron SysAdminCreatePageTitle col-md-offset-2 col-md-10 text-info text-left">
			New Page Template Section
			<br />
			<small>@Html.DisplayFor(model => model.PageTemplate, "PageTemplateNoLinks")</small>
		</h2>
	</div>

    <div class="form-horizontal">
		<div class="col-md-offset-2 col-md-10 text-left">
			@Html.ValidationSummary(false, "", new { @class = "text-danger" })
			@Html.HiddenFor(model => model.PageTemplateId)
			@Html.HiddenFor(model => model.ClientId)
			@Html.HiddenAuditFields()
		</div>

		<div class="form-group">
			<div class="col-md-offset-2 col-md-10 text-left">
				<input type="submit" value="Create" class="btn btn-info" />
				&nbsp;&nbsp;&nbsp;|&nbsp;&nbsp;&nbsp;&nbsp;
				@Html.ActionLink("Cancel", "SectionIndex", new { id = Model.PageTemplateId }, new { @class = "btn btn-default" })
			</div>
		</div>

		@Html.EditorFor(model => model.Name, "FieldText")
		@Html.EditorFor(model => model.Description, "FieldTextArea")
		@Html.EditorFor(model => model.Order, "FieldInt")
		@Html.EditorFor(model => model.DefaultRawHtmlValue, "FieldText")
		@Html.EditorFor(model => model.PreTextHtml, "FieldText")
		@Html.EditorFor(model => model.PostTextHtml, "FieldText")
		@Html.EditorFor(model => model.DefaultTextCssClass, "FieldText")
		@Html.EditorFor(model => model.IsPending, "FieldCheckbox")
		@Html.EditorFor(model => model.StartDateTimeUtc, "FieldDateTime")
		@Html.EditorFor(model => model.EndDateTimeUtc, "FieldDateTime")

		<div class="form-group">
			<div class="col-md-offset-2 col-md-10 text-left">
				<input type="submit" value="Create" class="btn btn-info" />
				&nbsp;&nbsp;&nbsp;|&nbsp;&nbsp;&nbsp;&nbsp;
				@Html.ActionLink("Cancel", "SectionIndex", new { id = Model.PageTemplateId }, new { @class = "btn btn-default" })
			</div>
		</div>
    </div>
}
<hr />
<div>
	@Html.ActionLink("Back to Page Template Index", "Index")
</div>
