			@:&nbsp;&nbsp;&nbsp;|&nbsp;&nbsp;&nbsp;
			@Html.ActionLink("Details", "Details", new { id = Model.StoreFrontId }, new { @class = "btn btn-success" });
			@:&nbsp;&nbsp;&nbsp;|&nbsp;&nbsp;&nbsp;
